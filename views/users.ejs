<% layout('layouts/boilerplate') %>

<div class="row">
    <% for(user of users) { %>
    <div class="col-lg-3 col-md-4 col-sm-6">
    <div class="card">
        <a href="/profile/<%= user._id %>"><h5 class="card-header"><%= user.FirstName %> <%= user.LastName %> </h5></a>
        <div class="card-body">
            <h5 class="card-title">@<%= user.username %> </h5>
            <a href="/profile/<%= user._id%>"><button class="btn btn-success btn-block">View Profile</button></a>      
        </div>
    </div>
</div>
<% } %>

</div>