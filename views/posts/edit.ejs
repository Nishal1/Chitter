<% layout('layouts/boilerplate') %>


<div class="container d-flex justify-content-center align-items-center mt-5">
   
        <div class="col-xs-12 col-sm-11 col-md-6 col-xl-8">
            <div class="width-changer card shadow p-3 noth">
                    <form action="/posts/<%=post._id %>?_method=PUT" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="body">Make your changes, <%= currentUser.FirstName %>?</label>
                            <textarea class="form-control" type="text" id="body" name="post[body]" required><%= post.body %> </textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                       
                        <button class="btn btn-success btn-block">Update Post</button>
                    </form>

                </div>
            </div>
        </div>
 
</div>