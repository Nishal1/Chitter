<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<% if(!users.follower.length) {%> 
  <div class="d-flex justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-6"> 
        <div class="card-body">
          <h5 class="card-title">No followers</h5>
        </div>
    </div>
  </div>
<% } %> 

<% for(let follower of users.follower) { %>
    <div class="d-flex justify-content-center">
      <div class="col-sm-12 col-md-8 col-lg-6">
        <div onclick="location.href='/profile/<%= follower._id %>'" class="card noth">
          <div class="card-body">
            <h5 class="card-title"><%= follower.FirstName %> <%= follower.LastName %></h5>
          </div>
        </div>
      </div>
    </div>
    <% } %>